#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${BLUE}üîç Checking commit message format...${NC}"
echo "${YELLOW}Expected format:${NC} <gitmoji> type: message"
echo "${GREEN}Examples:${NC}"
echo "  ‚ú® feat: add new feature"
echo "  üêõ fix: resolve bug in component"
echo ""

# Let commitlint do the validation
npx --no -- commitlint --edit $1 || (
    echo "${RED}‚ùå Commit message format is invalid${NC}"
    echo "${YELLOW}Please check commitlint.config.js for all available types${NC}"
    exit 1
) 
